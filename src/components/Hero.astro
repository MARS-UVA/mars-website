---
import { Image } from "astro:assets";
import artieMinePicture from "../assets/images/ArtieMining.jpeg";
---

<section class="hero">
    <Image
        class="background"
        src={artieMinePicture}
        alt="MARS Team"
        loading="lazy"
    />
    <div class="main-title">
        <h1>MARS at UVA</h1>
        <h3>Mechatronics and Robotics Society</h3>
        <h2>NASA Lunabotics Team</h2>
    </div>
    <div class="fading-box"></div>
</section>

<style>
    .hero {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        color: white;
        overflow: hidden;
        z-index: 0;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        min-width: 100%;
        height: 100%;
        object-fit: cover;
        /* animation: pan 90s ease-in-out infinite; */
        /* animation-delay: -22.5s; */
        z-index: -1;
        overflow-x: visible;
    }

    @media screen and (max-height: 600px) {
        .background {
            animation: none;
            transform: none;
            min-width: auto;
            object-fit: cover;
            width: 100%;
        }
    }

    @keyframes pan {
        0%,
        100% {
            transform: translateX(-50%);
        }

        50% {
            transform: translateX(0%);
        }
    }

    .main-title {
        position: relative;
        z-index: 1;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.95),
            rgba(0, 0, 0, 0.7)
        );
        padding: 100px;
        padding-bottom: 20px;
        text-align: center;
        width: 100%;
    }

    .main-title h1 {
        font-size: 4.5em;
        margin: 0;
        font-weight: bold;
    }

    .main-title h2 {
        font-size: 2em;
        margin-top: 20px;
    }

    .main-title h3 {
        font-size: 1.5em;
        margin: 0;
        margin-top: 20px;
    }

    .fading-box {
        width: 100%;
        height: 100px;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.7),
            rgba(0, 0, 0, 0)
        );
    }
</style>
