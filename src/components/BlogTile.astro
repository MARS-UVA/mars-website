---
import Meta from "./Meta.astro";

const { frontmatter } = Astro.props;
const { title, author, date, description, thumbnail, slug } = frontmatter;
---

<a href={`/blog/${slug}`} class="blog-tile">
    <section>
        <img src={thumbnail} alt={title} class="main-pic" />
        <div class="info">
            <h2 class="title">{title}</h2>
            <Meta author={author} date={date} />
            <p class="description">
                {description}
            </p>
        </div>
    </section>
</a>

<style>
    .blog-tile {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    section {
        text-align: left;
        display: flex;
        align-items: stretch;
        margin: 20px;
        gap: 20px;
        border-width: 2px;
        border-style: solid;
        transition: transform 0.3s ease;
        background-color: #fff;
        border-radius: 60px;
        box-sizing: border-box;
        overflow: hidden;
    }

    section:hover {
        transform: scale(1.05);
        background-color: #eee;
    }

    section .main-pic {
        width: 50%;
        aspect-ratio: 4/3;
        object-fit: cover;
        border-radius: 60px 0px 0px 60px;
        flex-shrink: 0;
    }

    section .info {
        width: 50%;
        padding: 20px 20px 20px 0;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-sizing: border-box;
        overflow: hidden;
    }

    section .info h2 {
        font-size: 2rem;
        margin: 0 0 10px 0;
        line-height: 1.2;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    section .info p {
        font-size: 1rem;
        line-height: 1.4;
        margin: 10px 0 0 0;
        word-wrap: break-word;
        overflow-wrap: break-word;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @media (max-width: 768px) {
        section {
            flex-direction: column;
            margin: 15px;
            gap: 0;
            border-radius: 30px;
        }

        section .main-pic {
            width: 100%;
            aspect-ratio: 16/9;
            border-radius: 30px 30px 0px 0px;
        }

        section .info {
            width: 100%;
            padding: 15px;
        }

        section .info h2 {
            font-size: 1.5rem;
            margin: 0 0 8px 0;
        }

        section .info p {
            font-size: 0.9rem;
            line-height: 1.3;
            -webkit-line-clamp: 2;
        }
    }

    @media (max-width: 480px) {
        section {
            margin: 10px;
            border-radius: 20px;
        }

        section .main-pic {
            border-radius: 20px 20px 0px 0px;
        }

        section .info {
            padding: 12px;
        }

        section .info h2 {
            font-size: 1.3rem;
        }

        section .info p {
            font-size: 0.85rem;
        }
    }
</style>
