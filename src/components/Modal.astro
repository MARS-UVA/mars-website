---
const {
    addCloseButton,
    id,
    buttonContent,
    buttonAttributes,
    defaultOpen,
    showX,
    width,
} = Astro.props;
---

<>
    {
        buttonContent ? (
            <span class="open-modal" data-id={id} {...buttonAttributes}>
                {buttonContent || "Open Modal"}
            </span>
        ) : null
    }
</>
<div
    class="overlay hidden"
    id={id}
    data-default-open={defaultOpen ? "true" : "false"}
>
    <div class="modal" style={{ maxWidth: width ?? "800px" }}>
        {
            showX ? (
                <button class="close-button x-button" data-id={id}>
                    &times;
                </button>
            ) : null
        }
        <slot />
        {
            addCloseButton ? (
                <button class="close-button bottom-button" data-id={id}>
                    Close
                </button>
            ) : null
        }
    </div>
</div>

<script>
    // Detect document.referrer. If from external site, show defaultOpen modals
    const referrer = document.referrer;
    const modals = document.querySelectorAll(".overlay");
    modals.forEach((modal) => {
        const isDefaultOpen = modal.getAttribute("data-default-open");
        if (
            (referrer === "" || !referrer.includes(window.location.hostname)) &&
            isDefaultOpen === "true"
        ) {
            modal.classList.remove("hidden");
        }
    });

    function closeModal(id: string) {
        const targetOverlay = document.getElementById(id);
        if (targetOverlay) {
            targetOverlay.classList.add("hidden");
        }
    }

    function openModal(id: string) {
        const targetOverlay = document.getElementById(id);
        if (targetOverlay) {
            targetOverlay.classList.remove("hidden");
        }
    }

    const overlays = document.querySelectorAll(".overlay");
    overlays.forEach((overlay) => {
        overlay.addEventListener("click", (e) => {
            if (e.target === overlay) {
                closeModal(overlay.id);
            }
        });
    });

    const closeButtons = document.querySelectorAll(".close-button");
    closeButtons.forEach((button) => {
        button.addEventListener("click", (e) => {
            e.stopPropagation();
            closeModal(button.getAttribute("data-id") || "");
        });
    });

    const openButtons = document.querySelectorAll(".open-modal");
    openButtons.forEach((button) => {
        button.addEventListener("click", (e) => {
            e.stopPropagation();
            openModal(button.getAttribute("data-id") || "");
        });
    });
</script>

<style>
    .overlay.hidden {
        display: none;
    }

    .overlay {
        z-index: 1001;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        width: 100%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-size: 1.2rem;
        position: relative;
    }

    .x-button {
        position: absolute;
        top: 0.5em;
        right: 0.5em;
        background: transparent;
        border: none;
        font-size: 2rem;
        cursor: pointer;
    }

    .bottom-button {
        display: block;
        margin: 10px auto;
        padding: 10px 20px;
        background-color: #f44336;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1.5rem;
        cursor: pointer;
        top: 10px;
        right: 10px;
        font-family: inherit;
    }

    .open-modal {
        cursor: pointer;
    }
</style>
