---
const { year, currentYear } = Astro.props;
---

<a
    href={`/team/${year}`}
    class="subteam-button"
    style={`background-color: ${year === currentYear ? "#4a89ff" : "#888"};`}
>
    {year}
</a>

<style>
    .subteam-button {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 30px;
        color: white;
        text-decoration: none;
        font-size: 1.75rem;
    }
</style>
