	<style>
		.row {
			display: flex;
			flex-direction: row;
			gap: 40px;
			justify-content: center;
		}

		.row img {
			width: 30%;
			object-fit: contain;
			height: min-content;
		}

		@media (max-width: 768px) {
			.row {
				gap: 20px;
			}

			.row img {
				width: 100%;
				object-fit: contain;
				margin: 10px 0;
			}
		}

		@media (max-width: 1000px) {
			.row.responsive {
				flex-wrap: wrap;
			}

			.row.responsive img {
				width: 100%;
				object-fit: contain;
				margin: 20px 0;
			}
		}

		@media (max-width: 1200px) {
			.row {
				flex-direction: column;
			}
		}

		.checkmark-list {
			list-style: none;
			padding: 0;
		}

